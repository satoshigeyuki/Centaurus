grammar XML;
Document : XmlDecl? Comment* (DocType Comment*)? Element* ;
XmlDecl : '<?xml' Attribute* '?>' ;
DocType : '<!DOCTYPE' Name 'SYSTEM' Value '>' ;
Comment : '<!--' /((-[^\-])|[^\-])*+/ '-->' ;
Element : '<' Name Attribute* ElementBody ;
ElementBody : '/>' | '>' Content (Element Content)* '</' Name '>' ;
Content : /[^<]*+/ ;
Attribute : Name '=' Value ;
Name : /[a-zA-Z][a-zA-Z0-9_]*/ ;
Value : /"[^"]*+"/ ;
